<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="one.xord.android.activities.NICActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:src="@drawable/nic_template"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginTop="480dp"
            android:rotation="90"
            android:src="@drawable/verified_tick"
            android:layout_marginLeft="280dp"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:text="Taha haq"
            android:layout_marginLeft="220dp"
            android:rotation="90"
            android:layout_marginTop="200dp"
            android:id="@+id/nic_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Zia ul haq"
            android:layout_marginLeft="160dp"
            android:rotation="90"
            android:layout_marginTop="200dp"
            android:id="@+id/nic_father_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginLeft="110dp"
            android:rotation="90"
            android:layout_marginTop="190dp"
            android:id="@+id/nic_gender"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="100dp"
            android:rotation="90"
            android:layout_marginTop="260dp"
            android:id="@+id/nic_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="25dp"
            android:rotation="90"
            android:layout_marginTop="230dp"
            android:id="@+id/nic_nic_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="55dp"
            android:rotation="90"
            android:layout_marginTop="330dp"
            android:id="@+id/nic_dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:layout_marginLeft="8dp"
            android:rotation="90"
            android:layout_marginTop="210dp"
            android:id="@+id/nic_doi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginLeft="8dp"
            android:rotation="90"
            android:layout_marginTop="335dp"
            android:id="@+id/nic_doe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />






    </RelativeLayout>






</LinearLayout>
